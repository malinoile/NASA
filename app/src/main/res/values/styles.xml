<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fabNavigationOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
    </style>

    <style name="fabNavigationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>