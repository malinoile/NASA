<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/navigation_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:clickable="false"
        android:background="@color/black"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/fabNavigationOption"
            android:id="@+id/option_picture_of_day_layout">

            <TextView
                style="@style/fabNavigationTextView"
                android:text="@string/picture_of_the_day"/>

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_picture" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_photos_curiosity"
            style="@style/fabNavigationOption">

            <TextView
                style="@style/fabNavigationTextView"
                android:text="@string/rover_curiosity_photos"/>

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_rover" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_settings"
            style="@style/fabNavigationOption">

            <TextView
                style="@style/fabNavigationTextView"
                android:text="@string/settings"/>

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_settings" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/double_padding"
            app:backgroundTint="?attr/colorPrimaryVariant"
            app:srcCompat="@drawable/ic_burger" />

    </FrameLayout>

</FrameLayout>